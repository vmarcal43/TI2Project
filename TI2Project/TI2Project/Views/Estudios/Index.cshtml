@model IEnumerable<TI2Project.Models.Estudios>

<h2>Studios</h2>

@*impede que utilizadores que não sejam administradores criem estúdios*@
@if (User.IsInRole("Admin"))
{
    <p>@Html.ActionLink("Add Studio", "Create")</p>
}

@foreach (var item in Model)
{
    <div style="float:left; border-style:solid; border-color:black">
        @*redireciona o utilizador para a view Details do estúdio escolhido*@
        <a href="/Estudios/Details/@item.ID">
            <img src="~/Images/Studios/@item.Imagem" width="180" height="270">
        </a>
        <p style="text-align:center">@item.Nome</p>
    </div>
    <div style="float:left; border-style:solid; border-color:white; border-width:thin"></div>
}
